<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>brooklyn-marklogic.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d %-5level %logger{30} [%thread{15}]: %msg%n</pattern>
        </encoder>
    </appender>

    <include resource="brooklyn/logback-stdout.xml"/>

    <include resource="brooklyn/logback-excludes.xml"/>
    <include resource="brooklyn/logback-debug.xml"/>

    <logger name="io.cloudsoft" level="DEBUG"/>
    <logger name="brooklyn.rest.util.WebResourceUtils" level="ERROR"/>
    <logger name="brooklyn.management.internal.EffectorUtils" level="ERROR"/>
    <logger name="brooklyn.management.internal.BrooklynGarbageCollector" level="ERROR"/>
    <logger name="net.schmizz.sshj.DefaultConfig" level="ERROR"/>
    <logger name="io.cloudsoft.marklogic.forests.ForestsImpl" level="INFO"/>
    <logger name="io.cloudsoft.marklogic.databases.DatabasesImpl" level="INFO"/>
</configuration>
