dbname=$1
cat replica_list | awk -v dbname="$dbname" ' {master=$1;
                          replica=$2;
                          split(master,master_comp,":");
                          split(replica,replica_comp,":");
                          sysstring=sprintf("curl --digest -u admin:admin http://localhost:8001/detach_replica.xqy?dbname=%s\\&fname=%s-%s-%s\\&repname=%s-%s-%s",dbname,master_comp[1],master_comp[2],master_comp[3],replica_comp[1],replica_comp[2],replica_comp[3]);sysstring | getline ids;close(sysstring);
                        } '
